 {
    "name": "SoundFilter",
    "description" : "Remove reposts from soundcloud feed.",
    "version": "1.2",
    "manifest_version": 2,
    "permissions": [
    	"activeTab",
    	"*://*.soundcloud.com/*",
    	"storage"
    ],
    "background": {
    	"scripts" : ["background.js"],
    	"persistent": false
    },
    "browser_action": {
      "default_title": "SoundFilter",
      "default_icon": "icon_16.png"
    },
    "icons": { 
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png" 
    },
    "content_scripts": [
    	{
    		"matches": ["*://*.soundcloud.com/*"],
    		"js": ["removeReposts.js"]
    	}
    ]
  }